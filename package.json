{
  "name": "jimsimon-dev",
  "version": "1.0.0",
  "description": "Professional personal website for Jim Simon",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:client": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "vite build",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.js",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview"
  },
  "keywords": [
    "personal",
    "website",
    "portfolio",
    "blog"
  ],
  "author": "Jim Simon",
  "license": "MIT",
  "dependencies": {
    "@electric-sql/pglite": "^0.3.4",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.0.1",
    "@types/marked": "^5.0.2",
    "bcrypt": "^6.0.0",
    "drizzle-orm": "^0.33.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "koa-static": "^5.0.0",
    "lit": "^3.2.0",
    "marked": "^16.1.2"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.24.0",
    "eslint": "^9.0.0",
    "jsdom": "^25.0.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.19",
    "vitest": "^2.0.0"
  }
}
